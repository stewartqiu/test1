<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.schooldroid.sbottomnavigationlib.sBottomNavFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:elevation="5dp"
            android:background="@color/background_bottom"
            android:id="@+id/btmFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/menu_btm"/>

        <FrameLayout
            android:layout_above="@id/btmFrag"
            android:id="@+id/contentFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</FrameLayout>
